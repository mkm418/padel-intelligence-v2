# AI Research Template - Environment Variables
# Copy this file to .env and customize as needed

# ============================================================================
# Project Settings
# ============================================================================
PROJECT_NAME=my-research-project
OUTPUT_DIR=./output
LOG_LEVEL=INFO

# ============================================================================
# API Keys (Optional Overrides)
# ============================================================================
# By default, keys are loaded from tools/api_keys.py
# Override specific keys here if needed:

# FIRECRAWL_API_KEY=fc-your-key-here
# APIFY_API_KEY=apify_api_your-key-here
# SEMRUSH_API_KEY=your-key-here
# EXA_API_KEY=your-key-here
# PERPLEXITY_API_KEY=pplx-your-key-here
# SERPER_API_KEY=your-key-here

# ============================================================================
# OpenAI (if using)
# ============================================================================
# OPENAI_API_KEY=sk-your-key-here
# OPENAI_MODEL=gpt-4o
# OPENAI_CHEAP_MODEL=gpt-4o-mini

# ============================================================================
# Rate Limiting
# ============================================================================
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=2

# ============================================================================
# Cost Management
# ============================================================================
MAX_DAILY_COST=50.00
WARN_COST_THRESHOLD=40.00

# ============================================================================
# Output Settings
# ============================================================================
EXPORT_FORMAT=json  # json, csv, or both
INCLUDE_TIMESTAMPS=true
COMPRESS_EXPORTS=false

# ============================================================================
# Logging
# ============================================================================
LOG_FILE=./output/logs/app.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
