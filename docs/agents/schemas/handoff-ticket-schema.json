{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/handoff-ticket.json",
  "title": "HandoffTicket",
  "description": "Strict schema for multi-agent software delivery handoff tickets. Enforces traceability and auditability.",
  "type": "object",
  "required": [
    "id",
    "title",
    "owner_agent",
    "status",
    "context",
    "requirements",
    "acceptance_criteria",
    "artifacts",
    "dependencies",
    "risks",
    "test_plan",
    "telemetry_plan",
    "rollout_plan"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Z]{2,4}-[0-9]{4,6}$",
      "description": "Unique ticket ID. Format: PREFIX-NUMBER (e.g. API-0001, FE-0042). Prefix identifies domain."
    },
    "title": { "type": "string", "minLength": 5, "maxLength": 120 },
    "owner_agent": {
      "type": "string",
      "enum": ["frontend", "backend", "infra", "qa", "devops", "orchestrator"]
    },
    "status": {
      "type": "string",
      "enum": ["draft", "ready", "in_progress", "blocked", "review", "done", "archived"],
      "default": "draft"
    },
    "context": {
      "type": "object",
      "required": ["summary", "parent_ticket_id", "created_at", "updated_at"],
      "additionalProperties": false,
      "properties": {
        "summary": { "type": "string", "minLength": 20 },
        "parent_ticket_id": { "type": ["string", "null"] },
        "created_at": { "type": "string", "format": "date-time" },
        "updated_at": { "type": "string", "format": "date-time" },
        "tags": { "type": "array", "items": { "type": "string" } }
      }
    },
    "requirements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "description", "priority"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "pattern": "^REQ-[0-9]{2}$" },
          "description": { "type": "string" },
          "priority": { "type": "string", "enum": ["must", "should", "could"] }
        }
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "criterion", "requirement_ids", "verifiable"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "pattern": "^AC-[0-9]{2}$" },
          "criterion": { "type": "string" },
          "requirement_ids": { "type": "array", "items": { "type": "string" } },
          "verifiable": { "type": "boolean" }
        }
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "path"],
        "additionalProperties": false,
        "properties": {
          "type": { "type": "string", "enum": ["source", "config", "test", "docs", "migration"] },
          "path": { "type": "string" },
          "checksum": { "type": "string" }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ticket_id", "type"],
        "additionalProperties": false,
        "properties": {
          "ticket_id": { "type": "string" },
          "type": { "type": "string", "enum": ["blocks", "blocked_by", "related"] }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description", "severity", "mitigation"],
        "additionalProperties": false,
        "properties": {
          "description": { "type": "string" },
          "severity": { "type": "string", "enum": ["low", "medium", "high", "critical"] },
          "mitigation": { "type": "string" }
        }
      }
    },
    "test_plan": { "type": "object" },
    "telemetry_plan": { "type": "object" },
    "rollout_plan": { "type": "object" }
  }
}

