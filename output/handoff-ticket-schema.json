{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/handoff-ticket.json",
  "title": "HandoffTicket",
  "description": "Strict schema for multi-agent software delivery handoff tickets. Enforces traceability and auditability.",
  "type": "object",
  "required": [
    "id",
    "title",
    "owner_agent",
    "status",
    "context",
    "requirements",
    "acceptance_criteria",
    "artifacts",
    "dependencies",
    "risks",
    "test_plan",
    "telemetry_plan",
    "rollout_plan"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[A-Z]{2,4}-[0-9]{4,6}$",
      "description": "Unique ticket ID. Format: PREFIX-NUMBER (e.g. API-0001, FE-0042). Prefix identifies domain."
    },
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 120,
      "description": "Concise, imperative title"
    },
    "owner_agent": {
      "type": "string",
      "enum": ["frontend", "backend", "infra", "qa", "devops", "orchestrator"],
      "description": "Agent responsible for this ticket. Traceability: links to agent execution logs."
    },
    "status": {
      "type": "string",
      "enum": ["draft", "ready", "in_progress", "blocked", "review", "done", "archived"],
      "default": "draft",
      "description": "Lifecycle status. Traceability: status transitions are logged."
    },
    "context": {
      "type": "object",
      "required": ["summary", "parent_ticket_id", "created_at", "updated_at"],
      "additionalProperties": false,
      "properties": {
        "summary": {
          "type": "string",
          "minLength": 20,
          "description": "2-4 sentence problem statement"
        },
        "parent_ticket_id": {
          "type": ["string", "null"],
          "pattern": "^([A-Z]{2,4}-[0-9]{4,6}|null)$",
          "description": "Parent epic/feature ticket. null for top-level. Traceability: links to parent."
        },
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp"
        },
        "tags": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true,
          "maxItems": 10
        }
      }
    },
    "requirements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "description", "priority"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^REQ-[0-9]{2}$",
            "description": "Requirement ID within ticket (REQ-01, REQ-02...). Traceability: maps to acceptance criteria."
          },
          "description": {
            "type": "string",
            "minLength": 10
          },
          "priority": {
            "type": "string",
            "enum": ["must", "should", "could"]
          }
        }
      }
    },
    "acceptance_criteria": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "criterion", "requirement_ids", "verifiable"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^AC-[0-9]{2}$",
            "description": "Acceptance criterion ID (AC-01...). Traceability: links to requirements."
          },
          "criterion": {
            "type": "string",
            "minLength": 10
          },
          "requirement_ids": {
            "type": "array",
            "items": { "type": "string", "pattern": "^REQ-[0-9]{2}$" },
            "minItems": 1,
            "description": "Traceability: which requirements this AC validates"
          },
          "verifiable": {
            "type": "boolean",
            "description": "Must be true. AC must be objectively testable."
          }
        }
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "type", "checksum"],
        "additionalProperties": false,
        "properties": {
          "path": {
            "type": "string",
            "description": "File or resource path relative to repo root"
          },
          "type": {
            "type": "string",
            "enum": ["source", "config", "test", "docs", "migration"]
          },
          "checksum": {
            "type": "string",
            "pattern": "^sha256:[a-f0-9]{64}$",
            "description": "Traceability: content hash for change verification"
          }
        }
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ticket_id", "type"],
        "additionalProperties": false,
        "properties": {
          "ticket_id": {
            "type": "string",
            "pattern": "^[A-Z]{2,4}-[0-9]{4,6}$",
            "description": "Traceability: blocks on / blocked by"
          },
          "type": {
            "type": "string",
            "enum": ["blocks", "blocked_by", "related"]
          }
        }
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description", "severity", "mitigation"],
        "additionalProperties": false,
        "properties": {
          "description": { "type": "string", "minLength": 10 },
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "mitigation": { "type": "string", "minLength": 5 }
        }
      }
    },
    "test_plan": {
      "type": "object",
      "required": ["unit", "integration", "e2e"],
      "additionalProperties": false,
      "properties": {
        "unit": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["description", "ac_id"],
            "properties": {
              "description": { "type": "string" },
              "ac_id": {
                "type": "string",
                "pattern": "^AC-[0-9]{2}$",
                "description": "Traceability: maps test to acceptance criterion"
              }
            }
          }
        },
        "integration": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["description", "ac_id"],
            "properties": {
              "description": { "type": "string" },
              "ac_id": { "type": "string", "pattern": "^AC-[0-9]{2}$" }
            }
          }
        },
        "e2e": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["description", "ac_id"],
            "properties": {
              "description": { "type": "string" },
              "ac_id": { "type": "string", "pattern": "^AC-[0-9]{2}$" }
            }
          }
        }
      }
    },
    "telemetry_plan": {
      "type": "object",
      "required": ["metrics", "logs", "alerts"],
      "additionalProperties": false,
      "properties": {
        "metrics": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "type", "labels"],
            "properties": {
              "name": { "type": "string" },
              "type": { "type": "string", "enum": ["counter", "gauge", "histogram"] },
              "labels": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "logs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["event", "level"],
            "properties": {
              "event": { "type": "string" },
              "level": { "type": "string", "enum": ["debug", "info", "warn", "error"] }
            }
          }
        },
        "alerts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["condition", "severity"],
            "properties": {
              "condition": { "type": "string" },
              "severity": { "type": "string", "enum": ["info", "warning", "critical"] }
            }
          }
        }
      }
    },
    "rollout_plan": {
      "type": "object",
      "required": ["strategy", "phases"],
      "additionalProperties": false,
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["big_bang", "canary", "blue_green", "feature_flag", "none"]
        },
        "phases": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["name", "target", "duration_minutes"],
            "properties": {
              "name": { "type": "string" },
              "target": {
                "type": "string",
                "enum": ["dev", "staging", "prod_canary", "prod_full"]
              },
              "duration_minutes": { "type": "integer", "minimum": 0 }
            }
          }
        }
      }
    }
  }
}
